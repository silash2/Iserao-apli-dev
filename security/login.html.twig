{% extends 'pins/layouts/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form  class="container" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div>

        <h1 class="h3 mb-3 font-weight-normal margin-left:30%;" style="margin-left: 30%;">Please sign in</h1>

        <label id="loginInput" for="loginInput">Username</label>

        <input  type="text" value="{{ last_username }}" name="username" id="loginInput" class="form-control" autocomplete="username" required autofocus>

        <label id="loginInput" for="loginInput">Password</label>

        <input type="password" name="password" id="loginInput" class="form-control" autocomplete="current-password" required> 
    </div>
    

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


        

        <div class="checkbox mb-3" style="margin-left: 30%;">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    

    <button class="btn btn-lg btn-primary" style="margin-left: 30%; width: 10.75cm;"  type="submit">
        Sign in
    </button>
    <p style="margin-top: 1.5%; margin-left:30%">creer un compte?<a href="{{path('app_register')}}">clickez ici</a></p>
</form>
{% endblock %}
